            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav menuBar">
                    <li>@Html.ActionLink(@Resources.Resources.HomeTitle, "Index", "Home")</li>
                    <li>@Html.ActionLink(@Resources.Resources.AboutTitle, "About", "Home")</li>
                    <li>@Html.ActionLink(@Resources.Resources.ContactTitle, "Contact", "Home")</li>
                    <li class="langMenu">
                        @Html.ActionLink(@Resources.Resources.Taal, "")
                    <ul class="dropMenu">
                        <li><a href="@Url.Action("ChangeLang","Language", new { newLang = "nl-NL" })">
